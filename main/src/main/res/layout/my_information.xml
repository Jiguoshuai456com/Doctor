<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_30"
        android:text="我的信息"
        android:textColor="@color/blue"
        android:textSize="@dimen/sp_16" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/my_information_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@mipmap/my_information_bg">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/my_information_iv"
                android:layout_width="@dimen/dp_105"
                android:layout_height="@dimen/dp_130"
                android:layout_margin="@dimen/dp_10"
                fresco:placeholderImage="@drawable/ic_launcher_background"
                />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_145"
                android:layout_marginTop="@dimen/dp_27"
                >
                <TextView
                    android:id="@+id/my_information_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="曾小想"
                    android:textSize="@dimen/sp_16"
                    />
                <TextView
                    android:id="@+id/my_information_hospital"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="曾小想"
                    android:textSize="@dimen/sp_12"
                    android:layout_marginTop="@dimen/dp_12"
                    />
                <TextView
                    android:id="@+id/my_information_doctor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="曾小想"
                    android:textSize="@dimen/sp_12"
                    android:layout_marginTop="@dimen/dp_12"
                    />
                <TextView
                    android:id="@+id/my_information_branch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="曾小想"
                    android:textSize="@dimen/sp_12"
                    android:layout_marginTop="@dimen/dp_12"
                    />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_30"
            android:background="@mipmap/tip_box"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/my_information_rl"
            android:layout_marginRight="@dimen/dp_15"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="管理"
                android:textSize="@dimen/dp_10"
                android:textColor="#fff"
                />
        </RelativeLayout>
    </RelativeLayout>

    
</LinearLayout>